{
  "enabled": true,
  "name": "learning_material",
  "description": "Based on the content, previous chat history, or  file provided by user, create learning materail. ",
  "version": "1",
  "when": {
    "type": "userTriggered",
    "patterns": [
      "**/*error*.log",
      "**/*error*.txt",
      "**/*error*.md",
      "**/logs/**",
      "**/*.log",
      "**/*exception*",
      "**/*traceback*",
      "**/*stderr*"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Please create a learning material follow these steps:\n\n"
  }
}