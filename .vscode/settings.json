{
  "kiroAgent.trustedCommands": [
    // --- Safe, Read-Only Commands ---
    "cls",
    "clear",
    "ls",
    "ls -F",
    "ls -l",
    "cat *",      // Still a minor risk, can read any file. Keep only if necessary.
    "head *",
    "tail *",
    "grep *",
    "pwd",
    "whoami",
    "id",

    // --- Version Control (Specific Subcommands Only) ---
    "git status",
    "git diff",
    "git log",
    "git branch",
    "git pull",
    "git add .", // Be specific, avoid 'git add *'
    "git stash",
    "git checkout", // Note: checkout can still modify files.
    "git commit -m",

    // --- Project-Specific Build & Test Commands ---
    // These are generally safe as they operate within the project scope.
    "pnpm install",
    "pnpm test",
    "pnpm dev",
    "pnpm build",
    "poetry install",
    "npm install",
    "npm test",
    "yarn install",
    "yarn test"
  ],
 "typescript.autoClosingTags": false,

  // --- Terminal Configuration ---
  "terminal.integrated.defaultProfile.windows": "PowerShell 7+",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.linux": "bash",

  // Only PowerShell 7+ is defined for Windows
  "terminal.integrated.profiles.windows": {
    "PowerShell 7+": {
      "path": [
        "${env:ProgramFiles}\\PowerShell\\7\\pwsh.exe",
        "${env:ProgramFiles(x86)}\\PowerShell\\7\\pwsh.exe",
        "${env:USERPROFILE}\\AppData\\Local\\Microsoft\\WindowsApps\\pwsh.exe",
        "pwsh.exe"
      ],
      "args": ["-NoLogo"],
      "icon": "terminal-powershell"
    }
  },

  // Settings for other operating systems remain unchanged
  "terminal.integrated.profiles.osx": {
    "zsh": {
      "path": "zsh",
      "args": ["-l"]
    }
  },
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "bash",
      "args": ["-l"]
    }
  },
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.shellIntegration.showWelcome": false
}